    <script>
        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            if (Array.isArray(label)) {
                return label.join(' ');
            }
            return label;
        };

        const wrapLabel = (label) => {
            const maxLength = 16;
            if (label.length <= maxLength) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            for (const word of words) {
                if ((currentLine + word).length > maxLength) {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            }
            lines.push(currentLine.trim());
            return lines.filter(line => line.length > 0);
        };
        
        const chartColors = {
            accent: '#58a6ff',
            primary: '#1f6feb',
            secondary: '#2ea043',
            tertiary: '#db6d28',
            quaternary: '#a371f7',
            grid: 'rgba(199, 209, 217, 0.2)',
            ticks: '#8b949e',
            text: '#c9d1d9'
        };

        const commonOptions = {
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    labels: {
                        color: chartColors.text,
                        font: { size: 12 }
                    }
                },
                tooltip: {
                    callbacks: {
                        title: tooltipTitleCallback
                    }
                }
            },
            scales: {
                y: {
                    ticks: { color: chartColors.ticks },
                    grid: { color: chartColors.grid }
                },
                x: {
                    ticks: { color: chartColors.ticks },
                    grid: { color: 'transparent' }
                }
            }
        };

        const distributionData = {
            labels: ['Phishing e Engenharia Social', 'Software Pirata ou Bundled', 'An√∫ncios Maliciosos', 'Exploit Kits'].map(wrapLabel),
            datasets: [{
                label: 'M√©todos de Distribui√ß√£o (%)',
                data: [55, 25, 15, 5],
                backgroundColor: [chartColors.accent, chartColors.primary, chartColors.tertiary, chartColors.quaternary],
                borderColor: '#161b22',
                borderWidth: 2
            }]
        };

        const distributionCtx = document.getElementById('distributionChart').getContext('2d');
        new Chart(distributionCtx, {
            type: 'doughnut',
            data: distributionData,
            options: {
                ...commonOptions,
                scales: { y: { display: false }, x: { display: false } },
                plugins: {
                    ...commonOptions.plugins,
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: chartColors.text,
                            font: { size: 12 }
                        }
                    }
                }
            }
        });

        const impactData = {
            labels: ['Comprometimento de Contas', 'Perdas Financeiras', 'Roubo de Identidade', 'Danos √† Reputa√ß√£o'].map(wrapLabel),
            datasets: [{
                label: 'Probabilidade de Impacto (%)',
                data: [85, 70, 60, 45],
                backgroundColor: chartColors.primary,
                borderColor: chartColors.accent,
                borderWidth: 2,
                barThickness: 25,
            }]
        };

        const impactCtx = document.getElementById('impactChart').getContext('2d');
        new Chart(impactCtx, {
            type: 'bar',
            data: impactData,
            options: {
                ...commonOptions,
                indexAxis: 'y',
                plugins: {
                    ...commonOptions.plugins,
                    legend: { display: false }
                },
                scales: {
                    x: {
                        ...commonOptions.scales.x,
                        suggestedMax: 100,
                        ticks: {
                            ...commonOptions.scales.x.ticks,
                            callback: function(value) { return value + "%" }
                        }
                    },
                    y: { ...commonOptions.scales.y, grid: { color: 'transparent' } }
